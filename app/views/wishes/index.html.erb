<%= action_title 'Nossos desejos' %>
<%= link_to 'Faça um desejo', new_wish_path %>
<table id="wishes">
  <thead>
  <tr>
    <th>Descrição</th>
    <th>Total</th>
    <th>Enviar oferta</th>
  </tr>
  </thead>
  <tbody>
  <% @wishes.each do |wish,counted_wishes| %>
    <tr>
      <td class="wish"><%= wish %></td>
      <td class="total"><%= counted_wishes %></td>
      <td class="btnOferta"><%= link_to 'Detalhes', wish_path(wish) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
